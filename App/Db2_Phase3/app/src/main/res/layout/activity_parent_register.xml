<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentRegistrationActivity">


    <Button
        android:id="@+id/bRegister"
        android:layout_below="@id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Register" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_below="@id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etName"
        android:layout_below="@id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_below="@id/tvPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_marginTop="40sp"
        android:layout_below="@id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:" />

    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_marginTop="20sp"
        android:layout_below="@id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password:" />

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_marginTop="20sp"
        android:layout_below="@id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:" />

    <TextView
        android:id="@+id/tvPhoneLabel"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etName"
        android:text="phone number:" />

    <Button
        android:id="@+id/bMainPage"
        android:layout_below="@id/bRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Return to Main Page" />

    <TextView
        android:id="@+id/tvHeader"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as a Parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_below="@id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>